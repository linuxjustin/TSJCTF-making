{% extends 'base.phtml' %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-4">
        <form method="post" action="/recover" class="w-75">
            <h1>Get Recovery Message</h1>
            <hr>
            {% if error_message is defined %}
            <div class="alert alert-danger" role="alert">
                {{ error_message }}
            </div>
            {% endif %}
            <h3>Username to be recovered</h3>
            <div class="form-group">
                <input type="text" id="username" name="username" class="form-control" placeholder="Username">
            </div>
            <h3>Security Questions</h3>
            <div classs="form-group">
                <p>Please check what you like. If your preferences match the one that you registered perfectly, the system will show your password hint configured at the time of registration.</p>
                {% for key, value in recovery_questions %}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="checked" id="{{ key }}" name="q{{ loop.index }}">
                    <label class="form-check-label" for="defaultCheck1">
                        {{ value }} {{ key }}
                    </label>
                </div>
                {% endfor %}
            </div>
            <input type="hidden" name="{{ token['keys']['name'] }}" value="{{ token['values']['name'] }}">
            <input type="hidden" name="{{ token['keys']['value'] }}" value="{{ token['values']['value'] }}">
            <hr>
            <div class="form-group">
                <button type="submit" class="form-control">Recover</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
